<mapper namespace="com.metain.web.mapper.MyPageMapper">

    <select id="selectIssueAll" resultType="MyCertListDTO">
        SELECT i.ISSUE_ID, i.ISSUE_STATUS
        FROM TBL_CERT_ISSUE i;
    </select>
